@model IEnumerable<StudentAssignmentManager.Models.Group>

@{
    ViewBag.Title = "Manage Groups";
}

<h2>@ViewBag.Title</h2>

<p>
    @Html.ActionLink("Create New Group", "Create", null, new { @class = "btn btn-primary" })
</p>
<table class="table table-striped table-hover">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.GroupName)
        </th>
        <th>
            Members
        </th>
        <th>Actions</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.GroupName)
            </td>
            <td>
                @(item.GroupMemberships != null ? item.GroupMemberships.Count : 0)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class = "btn btn-xs btn-info" }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }, new { @class = "btn btn-xs btn-default" }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "btn btn-xs btn-danger" })
            </td>
        </tr>
    }

    @if (!Model.Any())
    {
        <tr>
            <td colspan="3">No groups found.</td>
        </tr>
    }

</table>